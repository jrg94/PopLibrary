<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:text="@string/title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/title_label" android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/title_text_view"
                android:hint="@string/unavailable_book_info"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/isbn_label"
                android:text="@string/isbn_label" android:paddingRight="10dp" android:paddingLeft="10dp"/>
        <TextView
                android:layout_width="421dp"
                android:layout_height="wrap_content" android:id="@+id/isbn_text_view"
                android:hint="@string/unavailable_book_info"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/author_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/author_label" android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/author_text_view"/>
    </TableRow>
</LinearLayout>